{
	"name": "@essex/heat-streams",
	"private": true,
	"license": "MIT",
	"scripts": {
		"clean": "lerna run clean --stream",
		"start": "lerna run start --no-sort --concurrency 2 --stream",
		"build": "lerna run build --stream",
		"precommit": "lint-staged",
		"format": "prettier --write \"src/**/*.ts*\"",
		"test": "cross-env NODE_ENV=production run-s clean lint build"
	},
	"author": {
		"name": "Microsoft (experimental)",
		"email": "msrvizsupport@microsoft.com"
	},
	"contributors": [
		{
			"name": "Chris Trevino",
			"email": "chtrevin@microsoft.com"
		}
	],
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"nohoist": [
			"**"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
    "@commitlint/cli": "^8.3.5",
		"@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "@babel/core": "^7.8.4",
    "@babel/cli": "^7.8.4",
		"cross-env": "^7.0.0",
		"eslint-config-react-app": "^5.2.0",
		"eslint-plugin-header": "^3.0.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jest": "^23.6.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.18.3",
		"husky": "^4.2.1",
		"lerna": "^3.20.2",
		"lint-staged": "^10.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"typescript": "^3.7.5",
    "babel-eslint": "^10.0.3",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint": "^6.8.0",
    "rimraf": "^3.0.1"
	},
	"lint-staged": {
		"*[!.d].{ts,tsx}": [
			"prettier --write",
			"tslint --fix",
			"git add"
		]
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"useTabs": true
	},
  "resolutions": {
    "**/@types/react-dom": "16.0.10",
    "**/@types/react": "16.7.7",
    "**/@types/d3-shape": "1.2.6"
  }
}
