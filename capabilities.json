{
    "dataRoles": [
        {
            "displayName": "Category",
            "name": "category",
            "kind": "Grouping",
            "requiredTypes": [
                {
                    "text": true
                }
            ]
        },
        {
            "displayName": "Score",
            "name": "measure",
            "kind": "Measure",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Time",
            "name": "grouping",
            "kind": "Grouping"
        }
    ],
    "objects": {
        "data": {
            "displayName": "Data Settings",
            "properties": {
                "positionDomainType": {
                    "displayName": "Domain",
                    "description": "The type of values that exist in the domain.",
                    "type": {
                        "enumeration": [ 
                            { "displayName": "Dates", "value": "date" },
                            { "displayName": "Numbers", "value": "number" }                            
                        ]
                    }
                },
                "isLogScale": {
                    "displayName": "Log-Scale",
                    "description": "Apply a log-scale to the data coloration.",
                    "type": {
                        "bool": true
                    }
                },
                "dateAggregation": {
                    "displayName": "Date Aggregate",
                    "description": "When a date domain is used, this specifies date bucket granularity.",
                    "type": {
                        "enumeration": [
                            { "displayName": "Hourly", "value": "hours" },
                            { "displayName": "Daily", "value": "days" },
                            { "displayName": "Monthly", "value": "months" },
                            { "displayName": "Yearly", "value": "years" }
                        ]
                    }
                },
                "valueMin": {
                    "displayName": "Min Value",
                    "description": "The minimum value, inferred if not present",
                    "type": {
                        "numeric": true
                    }
                },
                "valueMax": {
                    "displayName": "Max Value",
                    "description": "The maximum value, inferred if not present",
                    "type": {
                        "numeric": true
                    }
                }
            }
        },
        "rendering": {
            "displayName": "View Settings",
            "properties": {
                "highlightColor": {
                    "displayName": "Highlight color",
                    "description": "The selected category highlight color value",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "fontSize": {
                    "displayName": "Text Size",
                    "description": "The category text size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                },
                "rowHeight": {
                    "displayName": "Row Height",
                    "description": "The height allocated per category row",
                    "type": {
                        "numeric": true
                    }
                },
                "categoryTextPercent": {
                    "displayName": "Category Text Percent",
                    "description": "Percentage of the visual to allocate to category text",
                    "type":{
                        "numeric": true
                    }
                },
                "axisHeight": {
                    "displayName": "Axis Height",
                    "description": "The height of the domain axis",
                    "type": {
                        "numeric": true    
                    }
                },
                "rowGap": {
                    "displayName": "Row Gap",
                    "description": "Whether to show a small gap between rows",
                    "type": {
                        "bool": true
                    }
                },
                "colorScheme": {
                    "displayName": "Color Scheme",
                    "description": "The data color scheme",
                    "type": {
                        "enumeration": [
                            { "displayName": "Diverging - BrBG", "value": "BrBG" },
                            { "displayName": "Diverging - PRGn", "value": "PRGn" },
                            { "displayName": "Diverging - PiYG", "value": "PiYG" },
                            { "displayName": "Diverging - PuOr", "value": "PuOr" },
                            { "displayName": "Diverging - RdBu", "value": "RdBu" },
                            { "displayName": "Diverging - RdGy", "value": "PiYG" },
                            { "displayName": "Diverging - RdYlBu", "value": "RdYlBu" },
                            { "displayName": "Diverging - RdYlGn", "value": "RdYlGn" },
                            { "displayName": "Diverging - Spectral", "value": "Spectral" },
                            { "displayName": "Sequential - Blues", "value": "Blues" },
                            { "displayName": "Sequential - Greens", "value": "Greens" },
                            { "displayName": "Sequential - Greys", "value": "Greys" },
                            { "displayName": "Sequential - Oranges", "value": "Oranges" },
                            { "displayName": "Sequential - Purples", "value": "Purples" },
                            { "displayName": "Sequential - Reds", "value": "Reds" }
                        ]
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    }
                },
                "dataVolume": 6,
                "values": {
                    "group": {
                        "by": "grouping",
                        "select": [
                            {
                                "bind": {
                                    "to": "measure"
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}